 <section class="content-main">
     <div class="row">
   
              
       
<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title">Banner Management</h3>
        <p></p>
  
        <br>
        <% data.forEach((element,index)=>{  %>
        <form class="forms-sample" method="post" action="/admin/editbanner/<%= element._id %> " >
  
          <div class="row">
            <div class="col-12">
              <div class="form-group col-md-5">
                <div class="d-flex">
                  <label class="w-25">Title</label>
                  <p id="err" class="text-danger d-flex justify-content-end w-75"></p>
                </div>
                <input type="text" class="form-control" id="name" placeholder="Title" name="title" value="<%= element.title %> " required>
              </div>
              <br>
              <div class="form-group col-md-5">
                <div class="d-flex">
                  <label class="w-25">Description</label>
                  <p id="err" class="text-danger d-flex justify-content-end w-75"></p>
                </div>
                <input type="text" class="form-control" id="name" placeholder="Description" name="description" value="<%= element.description %> " required>
              </div>
              <br>
              <div class="form-group col-md-5">
                <div class="card-body">
                  <div class="input-upload" >
                    <img src="/bannerImages/<%= element.Image[0] %> " alt="" class="img-fluid w-25 h-25" id="image0">
                    <input class="form-control " name="Image"  type="file" onchange="document.getElementById('image0').src=window.URL.createObjectURL(this.files[0]),indexValue(0)">
                  </div>
              </div>
              </div>
            </div>
            <br>
            <div class="col-6">
                <input type="text" name="IndexOfImage">
                <br>
              <button type="submit" class="btn btn-primary ">Submit</button>
              <button class="btn btn-light" onclick="history.back()">Cancel</button>
            </div>
          </div>
        </form>
        <% }) %>
      </div>
    </div>
  </div>
</div>
</section> 

  
  
