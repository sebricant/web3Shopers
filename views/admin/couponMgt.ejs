    <div>
        <% const dateToreadable=(date)=>{
            let dateMain = new Date(date)
            let months = ['Jan','Feb','March','April','May','June','July','Aug','Sept','Oct','Nov','Dec']
            let dd = dateMain.getDate()
            let mm = dateMain.getMonth()
            let month = months[mm]
            let yyyy = dateMain.getFullYear()

            return `${dd}-${month}-${yyyy}`
        } %> 
