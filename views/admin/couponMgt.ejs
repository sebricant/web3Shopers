            </td>
            <td>
                <% if(element.amount==0) {%> 
                <small class="">
                    <%= element.percentage %>% <br>
                    percentage 
                </small>
                <% }else{ %> 
                    <small class="">
                        $<%= element.amount%> <br>
                        amount
                    </small>
                <% } %> 
            </td>
          
            <td>
               <%= element.cappedAmount %> 
            </td>
           
            <td>
                <span class="badge rounded-pill alert-success"><%= element.amountValidity %> </span>
            </td>
            
            <td>
                <%=element.usageValidity %> 
            </td>
               
            <td>
                <%= dateToreadable(element.createdAt) %> 
            </td>
            <td>
                <%= dateToreadable(element.validityTill) %> 
            </td>
          </tr>
          <% }) %> 
