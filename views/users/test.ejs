          let number=$('#cart-count').html()
          if (count > 0) {
            number = parseInt(number) + 1
          } else {
            number = parseInt(number) - 1
          }
          $('#cart-count').html(number)

          //button - disabling
          let btn = input.parentElement.querySelector('button#buttonMinus')
          if (input.value < 2) {
            btn.setAttribute('disabled', '');
          } else {
            btn.removeAttribute('disabled');
          }
        }
      }
