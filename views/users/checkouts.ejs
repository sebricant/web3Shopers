  function placeOrder(fName, lname, country, address, landmark, town, postcode, number, email, state, paymentMethod) {

    fetch('/placeOrder', {
        method: 'post',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          fname: fName,
          lname: lname,
          country: country,
          address: address,
          landmark: landmark,
          town: town,
          postcode: postcode,
          number: number,
          email: email,
          state: state,
          paymentMethod: paymentMethod,
        })
      })
      .then((res) => res.json())
      .then((res) => {
        console.log(res, 'namma res');
        if (res.value == "success") {
          Swal.fire({
            position: 'center',
            icon: 'success',
            title: 'Your Order Was Successful &#127881;',
            showConfirmButton: false,
            timer: 2000,

          }).then((result) => {
            window.location.href = '/'
          })
        } else if (res.paypal == true) {
          paypalPayment(res.total)
        } else {
          razorPay(res.response)
        }
      })
  }

